@model SeminarskiRad.Models.MojiModeli.ViewModeli.StvoriSeminar

@{
    ViewBag.Title = "StvoriSeminar";
    
}

<h2>Stvori Seminar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Seminar.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Seminar.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Seminar.Naziv, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.Seminar.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Seminar.Opis, new { htmlAttributes = new { @class = "form-control", @style= "max-width" } })
                @Html.ValidationMessageFor(model => model.Seminar.Opis, "", new { @class = "text-danger" })
            </div>
        </div>
                
        
        <div class="form-group">
            @Html.LabelFor(model => model.Seminar.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Seminar.Datum, new { htmlAttributes = new { @class = "form-control", @Value = @Model.Seminar.Datum.ToString("yyyy-MM-dd HH:mm") } })
                @Html.ValidationMessageFor(model => model.Seminar.Datum, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Seminar.Predavac, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Seminar.Predavac, Model.Predavaci)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stvori" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @ViewBag.StvoriSeminar
</div>

<div>
    @Html.ActionLink("Nazad na popis seminara", "Seminari")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
