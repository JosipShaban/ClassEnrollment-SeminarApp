@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        if (User.IsInRole("Admin"))
        {
            
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registriraj", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Ovlasti zaposlenika", "AssignRole", "Admin", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Odjava</a></li>
    </ul>
        }
        else
        {
            <ul class="nav navbar-nav navbar-right">
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Odjava</a></li>
            </ul>
        }
    }

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Prijava", "Prijava", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
